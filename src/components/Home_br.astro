/* ═══════════════════════════════════════════════════════
   5. BUTTONS
   ═══════════════════════════════════════════════════════ */
.btn {
  display: inline-flex;
  align-items: center;
  gap: 14px;
  padding: 18px 36px 18px 42px;
  border-radius: var(--radius-pill);
  border: none;
  font-family: var(--font);
  font-weight: 600;
  font-size: clamp(.85rem, 1.2vw, 1.1rem);
  cursor: pointer;
  white-space: nowrap;
  transition: transform var(--transition), box-shadow var(--transition), filter var(--transition);
}
.btn:hover  { transform: translateY(-3px); box-shadow: 0 12px 35px rgba(0, 0, 0, .25); }
.btn:active { transform: translateY(0); }

.btn a {
  display: inline-flex;
  align-items: center;
  gap: 14px;
  color: inherit;
  width: 100%;
  height: 100%;
}
.btn img,
.btn svg            { width: 18px; height: auto; flex-shrink: 0; align-self: center; }
.btn img.icon-lg    { width: 24px; height: 24px; object-fit: contain; }

/* Primary – orange gradient with pulse */
.btn--primary {
  background: linear-gradient(90deg, #ffb000, #ff7a00);
  color: var(--c-text-btn);
  font-weight: 800;
  animation: pulseGlow 3s infinite;
  box-shadow: 0 12px 30px rgba(255, 140, 0, .35), inset 0 1px 0 rgba(255, 255, 255, .25);
}
.btn--primary:hover,
.btn--cta-large:hover { filter: brightness(1.1); }

/* Secondary – frosted glass */
.btn--secondary {
  position: relative;
  overflow: hidden;
  isolation: isolate;
  background: rgba(255, 255, 255, .06);
  color: var(--c-white);
  border: 1px solid rgba(255, 255, 255, .18);
  -webkit-backdrop-filter: blur(3px);
  backdrop-filter: blur(3px);
  box-shadow:
    0 10px 30px rgba(0, 0, 0, .18),
    inset 0  1px 0 rgba(255, 255, 255, .35),
    inset 0 -1px 0 rgba(255, 255, 255, .08);
  transition: transform var(--transition), box-shadow var(--transition), background var(--transition);
  will-change: backdrop-filter;
  transform: translateZ(0);
}
.btn--secondary::before {
  content: "";
  position: absolute;
  inset: 1px;
  border-radius: inherit;
  pointer-events: none;
  z-index: -1;
  background: linear-gradient(160deg, rgba(255, 255, 255, .3), rgba(255, 255, 255, .04) 45%, rgba(255, 255, 255, .12));
}
.btn--secondary:hover {
  background: rgba(255, 255, 255, .12);
  border-color: rgba(255, 255, 255, .38);
  box-shadow:
    0 14px 38px rgba(0, 0, 0, .22),
    inset 0  1px 0 rgba(255, 255, 255, .45),
    inset 0 -1px 0 rgba(255, 255, 255, .12);
}

/* CTA Large */
.btn--cta-large {
  background: linear-gradient(90deg, #ffb000, #ff7a00);
  color: var(--c-text-btn);
  font-weight: 800;
  font-size: clamp(1rem, 1.5vw, 1.25rem);
  padding: 22px 48px;
}

/* Dark CTA */
.btn--dark-cta {
  background: linear-gradient(90deg, #ffb000, #ff7a00);
  color: var(--c-text-btn);
  padding: 20px 44px;
  font-size: clamp(.9rem, 1.3vw, 1.15rem);
}


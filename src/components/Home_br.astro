/* ═══════════════════════════════════════════════════════
   11. MODAL
   ═══════════════════════════════════════════════════════ */
.isg-modal-overlay {
  position: fixed;
  inset: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: env(safe-area-inset-top, 0) env(safe-area-inset-right, 0) env(safe-area-inset-bottom, 0) env(safe-area-inset-left, 0);
  background: rgba(0, 0, 0, .45);
  -webkit-backdrop-filter: blur(12px) saturate(160%);
  backdrop-filter: blur(12px) saturate(160%);
  opacity: 0;
  visibility: hidden;
  transition: opacity .35s ease, visibility .35s ease;
}
.isg-modal-overlay.is-open { opacity: 1; visibility: visible; }

.isg-modal {
  --modal-radius: 36px;
  position: relative;
  width: 96vw;
  max-width: 1000px;
  height: 90vh;
  height: 90dvh;
  max-height: 1120px;
  border-radius: var(--modal-radius);
  overflow: hidden;
  background: rgba(255, 255, 255, .12);
  border: 1px solid rgba(255, 255, 255, .22);
  box-shadow:
    0 24px 80px rgba(0, 0, 0, .35),
    inset 0  1px 0 rgba(255, 255, 255, .3),
    inset 0 -1px 0 rgba(255, 255, 255, .06);
  -webkit-backdrop-filter: blur(40px) saturate(180%) brightness(1.05);
  backdrop-filter: blur(40px) saturate(180%) brightness(1.05);
  transform: scale(.92) translateY(30px);
  transition: transform .4s cubic-bezier(.23, 1, .32, 1), opacity .35s ease;
  opacity: 0;
}
.isg-modal-overlay.is-open .isg-modal {
  transform: scale(1) translateY(0);
  opacity: 1;
}

.isg-modal__close {
  position: absolute;
  top: 14px;
  right: 14px;
  z-index: 2;
  width: 36px;
  height: 36px;
  border: 1px solid rgba(255, 255, 255, .55);
  border-radius: 50%;
  background: rgba(0, 0, 0, .52);
  -webkit-backdrop-filter: blur(12px);
  backdrop-filter: blur(12px);
  color: #fff;
  font-size: 20px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6px 18px rgba(0, 0, 0, .35);
  transition: background .2s ease, transform .2s ease, box-shadow .2s ease;
  line-height: 1;
}
.isg-modal__close:hover {
  background: rgba(0, 0, 0, .72);
  box-shadow: 0 8px 22px rgba(0, 0, 0, .45);
  transform: scale(1.1);
}

.isg-modal__iframe {
  display: block;
  width: 100%;
  height: 100%;
  border: none;
  border-radius: var(--modal-radius);
  clip-path: inset(0 round var(--modal-radius));
  position: relative;
  z-index: 1;
}

/* Spinner */
@keyframes isg-spin {
  to { transform: rotate(360deg); }
}
.isg-modal__spinner {
  position: absolute;
  inset: 0;
  z-index: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, .25);
  border-radius: var(--modal-radius);
  transition: opacity .3s ease;
}
.isg-modal__spinner.is-hidden {
  opacity: 0;
  pointer-events: none;
}
.isg-modal__spinner::after {
  content: '';
  width: 48px;
  height: 48px;
  border: 4px solid rgba(255, 255, 255, .2);
  border-top-color: var(--c-orange, #ffa600);
  border-radius: 50%;
  animation: isg-spin .7s linear infinite;
}

/* Retry overlay */
.isg-modal__retry {
  position: absolute;
  inset: 0;
  z-index: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 18px;
  background: rgba(0, 0, 0, .6);
  border-radius: var(--modal-radius);
  opacity: 0;
  visibility: hidden;
  transition: opacity .3s ease, visibility .3s ease;
}
.isg-modal__retry.is-visible { opacity: 1; visibility: visible; }
.isg-modal__retry p {
  color: rgba(255, 255, 255, .75);
  font-family: var(--font);
  font-size: .95rem;
  text-align: center;
}
.isg-retry-btn {
  background: linear-gradient(90deg, #ffb000, #ff7a00);
  color: #1e1e1e;
  border: none;
  padding: 12px 28px;
  border-radius: 60px;
  font-family: var(--font);
  font-weight: 700;
  font-size: .95rem;
  cursor: pointer;
  transition: filter .2s ease, transform .2s ease;
}
.isg-retry-btn:hover { filter: brightness(1.1); transform: translateY(-2px); }


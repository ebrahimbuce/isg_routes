     JS – Entrance Animations & Modal
     ═══════════════════════════════════════════════════════ -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {

    function syncHeroButtonWidths() {
      var heroButtons = document.querySelectorAll('.hero__buttons .btn');
      if (!heroButtons.length) return;

      heroButtons.forEach(function (btn) {
        btn.style.width = 'auto';
      });

      var maxWidth = 0;
      heroButtons.forEach(function (btn) {
        var width = Math.ceil(btn.getBoundingClientRect().width);
        if (width > maxWidth) maxWidth = width;
      });

      if (!maxWidth) return;
      heroButtons.forEach(function (btn) {
        btn.style.width = maxWidth + 'px';
      });
    }

    window.addEventListener('load', syncHeroButtonWidths);
    window.addEventListener('resize', syncHeroButtonWidths);
    syncHeroButtonWidths();

    /* ── Entrance animations via IntersectionObserver ── */
    var animMap = {
      'fade-up':    'anim-fade-up',
      'fade-left':  'anim-fade-left',
      'fade-right': 'anim-fade-right',
      'scale-in':   'anim-scale-in',
      'slide-down': 'anim-slide-down'
    };

    var observer = new IntersectionObserver(function (entries) {
      entries.forEach(function (entry) {
        if (entry.isIntersecting) {
          var el   = entry.target;
          var type = el.getAttribute('data-anim') || 'fade-up';
          el.classList.remove('anim-hidden');
          el.classList.add(animMap[type] || 'anim-fade-up');
          observer.unobserve(el);
        }
      });
    }, { threshold: 0.12, rootMargin: '0px 0px -40px 0px' });

    document.querySelectorAll('[data-anim]').forEach(function (el) {
      observer.observe(el);
    });

    /* ── Modal ── */
    var MODAL_URL = 'https://rdt.tourism.pr.gov/formas/routes?lang=pt';

    var overlay  = document.getElementById('isgModal');
    var iframe   = document.getElementById('isgModalIframe');
    var closeBtn = document.getElementById('isgModalClose');
    var spinner  = document.getElementById('isgModalSpinner');
    var retryBox = document.getElementById('isgModalRetry');
    var retryBtn = document.getElementById('isgRetryBtn');

    var loadTimer  = null;
    var retryCount = 0;
    var MAX_AUTO   = 2;      // silent auto-retries before showing manual button
    var TIMEOUT_MS = 8000;   // ms before triggering a retry

    function clearTimer() {
      if (loadTimer) { clearTimeout(loadTimer); loadTimer = null; }
    }

    function startTimer() {
      clearTimer();
      loadTimer = setTimeout(function () {
        if (spinner.classList.contains('is-hidden')) return;
        handleTimeout();
      }, TIMEOUT_MS);
    }

    function handleTimeout() {
      if (retryCount < MAX_AUTO) {
        retryCount++;
        iframe.src = 'about:blank';
        setTimeout(function () { iframe.src = MODAL_URL; startTimer(); }, 400);
      } else {
        spinner.classList.add('is-hidden');
        retryBox.classList.add('is-visible');
      }
    }

    iframe.addEventListener('load', function () {
      if (!iframe.src || iframe.src === 'about:blank') return;
      clearTimer();
      retryCount = 0;
      spinner.classList.add('is-hidden');
      retryBox.classList.remove('is-visible');
    });

    retryBtn.addEventListener('click', function () {
      retryCount = 0;
      retryBox.classList.remove('is-visible');
      spinner.classList.remove('is-hidden');
      iframe.src = 'about:blank';
      setTimeout(function () { iframe.src = MODAL_URL; startTimer(); }, 400);
    });

    function openModal(e) {
      e.preventDefault();
      if (iframe.src === 'about:blank' || !iframe.src) {
        retryCount = 0;
        spinner.classList.remove('is-hidden');
        retryBox.classList.remove('is-visible');
        iframe.src = MODAL_URL;
        startTimer();
      } else if (!spinner.classList.contains('is-hidden')) {
        startTimer();
      }
      overlay.classList.add('is-open');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      clearTimer();
      overlay.classList.remove('is-open');
      document.body.style.overflow = '';
    }

    document.querySelectorAll('.btn').forEach(function (btn) {
      btn.addEventListener('click', openModal);
      var anchor = btn.querySelector('a');
      if (anchor) anchor.addEventListener('click', function (ev) { ev.preventDefault(); });
    });

    closeBtn.addEventListener('click', closeModal);
    overlay.addEventListener('click', function (e) { if (e.target === overlay) closeModal(); });
    document.addEventListener('keydown', function (e) { if (e.key === 'Escape') closeModal(); });
  });
</script>

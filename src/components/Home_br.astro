<style is:global>

.isg-routes {
  --font:           'Outfit', sans-serif;
  --c-orange:       #ffa600;
  --c-orange-dark:  #ff8000;
  --c-amber:        #ffc300;
  --c-red:          #ff4d00;
  --c-teal:         #00ded3;
  --c-text:         #464646;
  --c-text-light:   #555;
  --c-text-btn:     #1e1e1e;
  --c-white:        #fff;
  --radius-pill:    60px;
  --radius-card:    18px;
  --radius-img:     25px;
  --ease:           cubic-bezier(.23, 1, .32, 1);
  --transition:     0.3s ease;
}


.isg-routes *   { margin: 0; padding: 0; box-sizing: border-box; }
.isg-routes     { font-family: var(--font); color: var(--c-text); overflow-x: hidden; }
.isg-routes img { display: block; }
.isg-routes a   { text-decoration: none; color: inherit; }


@keyframes fadeInUp    { from { opacity: 0; transform: translateY(60px) }  to { opacity: 1; transform: translateY(0) } }
@keyframes fadeInLeft  { from { opacity: 0; transform: translateX(-60px) } to { opacity: 1; transform: translateX(0) } }
@keyframes fadeInRight { from { opacity: 0; transform: translateX(60px) }  to { opacity: 1; transform: translateX(0) } }
@keyframes scaleIn     { from { opacity: 0; transform: scale(.85) }        to { opacity: 1; transform: scale(1) } }
@keyframes slideDown   { from { opacity: 0; transform: translateY(-40px) } to { opacity: 1; transform: translateY(0) } }
@keyframes pulseGlow {
  0%, 100% { box-shadow: 0 0 0 0 rgba(255, 166, 0, .4); }
  50%      { box-shadow: 0 0 30px 10px rgba(255, 166, 0, .15); }
}

.anim-hidden     { opacity: 0; will-change: opacity, transform; }
.anim-fade-up    { animation: fadeInUp    .9s var(--ease) both; }
.anim-fade-left  { animation: fadeInLeft  .9s var(--ease) both; }
.anim-fade-right { animation: fadeInRight .9s var(--ease) both; }
.anim-scale-in   { animation: scaleIn    .9s var(--ease) both; }
.anim-slide-down { animation: slideDown  .9s var(--ease) both; }

.delay-1 { animation-delay: .1s; }
.delay-2 { animation-delay: .2s; }
.delay-3 { animation-delay: .3s; }
.delay-4 { animation-delay: .4s; }
.delay-5 { animation-delay: .5s; }



/* Full-bleed dark sections (hero, new-routes) */
.hero,
.new-routes                       { position: relative; overflow: hidden; }

.hero__bg,
.new-routes__bg                   { position: absolute; inset: 0; z-index: 0; }

.isg-routes .hero__bg img,
.isg-routes .new-routes__bg img   { width: 100%; height: 100%; object-fit: cover; max-width: none; }

.hero__overlay,
.new-routes__overlay              { position: absolute; inset: 0; z-index: 1; }

.hero__content,
.new-routes__content              { position: relative; z-index: 2; max-width: 1280px; }

/* Contained sections */
